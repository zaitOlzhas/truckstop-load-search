Content-Type: application/json

{
  "integrationId": "YOUR_INTEGRATION_ID",
  "password": "YOUR_PASSWORD",
  "userName": "YOUR_USERNAME",
  "criteria": {
    "origin": {
      "city": "Chicago",
      "state": "IL",
      "country": "USA",
      "range": 75
    },
    "destinations": [
      {
        "city": "New York",
        "state": "NY",
        "country": "USA",
        "range": 50
      },
      {
        "city": "Boston",
        "state": "MA",
        "country": "USA",
        "range": 100
      }
    ],
    "equipmentType": "F",
