# Build stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy csproj and restore dependencies
COPY ["TruckStopIntegration.csproj", "./"]
RUN dotnet restore "TruckStopIntegration.csproj"

# Copy everything else and build
COPY . .
RUN dotnet build "TruckStopIntegration.csproj" -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish "TruckStopIntegration.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

# Copy published app from publish stage
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "TruckStopIntegration.dll"]
